{
  "name": "bit_js",
  "version": "0.0.0-development",
  "description": "Javascript library for the Bands in Town API",
  "main": "./dist/index.js",
  "scripts": {
    "commit": "git-cz",
    "test": "mocha ./src/index.test.js -w",
    "test:single": "mocha ./src/index.test.js",
    "prebuild": "rimraf dist",
    "build": "babel --copy-files --out-dir dist --ignore *.test.js src",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/breadadams/bit_js.git"
  },
  "keywords": [
    "bands-in-town",
    "bit"
  ],
  "author": "Brad Adams <hi@breadadams.com> (https://breadadams.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/breadadams/bit_js/issues"
  },
  "homepage": "https://github.com/breadadams/bit_js#readme",
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "chai": "4.1.1",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.0.0",
    "mocha": "3.5.0",
    "rimraf": "2.6.1",
    "semantic-release": "^6.3.6"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  },
  "dependencies": {
    "es6-promise": "4.1.1",
    "isomorphic-fetch": "2.2.1"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  }
}
